{
    "$schema": "https://json.schemastore.org/package.json",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "vite build",
        "dev": "vite",
        "pw:install": "playwright install --with-deps",
        "test:browser": "node ./vendor/bin/pest --browser",
        "test:unit": "node ./vendor/bin/pest --testsuite=Unit",
