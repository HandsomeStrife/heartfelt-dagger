{
    "$schema": "https://json.schemastore.org/package.json",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "vite build",
        "dev": "vite",
        "peerserver": "node peerserver.js",
        "pw:install": "playwright install --with-deps",
        "test:browser": "node ./vendor/bin/pest --browser",
        "test:unit": "node ./vendor/bin/pest --testsuite=Unit",
        "test:feature": "node ./vendor/bin/pest --testsuite=Feature",
        "test:e2e": "node ./vendor/bin/pest --browser --stop-on-failure",
        "pretest": "npm run pw:install",
        "index-docs": "node scripts/index-docs.mjs",
        "index-docs:production": "DOCS_START_URL=https://heartfeltdagger.com/reference/ node scripts/index-docs-production.mjs",
        "build:production": "npm run build && npm run index-docs:production"
    },
    "devDependencies": {
        "@tailwindcss/vite": "^4.1.12",
        "axios": "^1.12.1",
        "concurrently": "^9.0.1",
        "laravel-echo": "^2.2.0",
        "laravel-vite-plugin": "^2.0.0",
        "peer": "^1.0.2",
        "pusher-js": "^8.4.0",
        "tailwindcss": "^4.1.12",
        "vite": "^7.0.4"
    },
    "dependencies": {
        "@3d-dice/dice-box": "^1.1.4",
        "@3d-dice/dice-themes": "^0.2.1",
        "@tailwindcss/typography": "^0.5.16",
        "@tiptap/core": "^3.3.0",
        "@tiptap/extension-color": "^3.3.0",
        "@tiptap/extension-highlight": "^3.3.0",
        "@tiptap/extension-image": "^3.3.0",
        "@tiptap/extension-link": "^3.3.0",
        "@tiptap/extension-text-align": "^3.3.0",
        "@tiptap/extension-text-style": "^3.3.0",
        "@tiptap/extension-underline": "^3.3.0",
        "@tiptap/pm": "^3.3.0",
        "@tiptap/starter-kit": "^3.3.0",
        "@uppy/aws-s3": "^5.0.0",
        "@uppy/core": "^5.0.1",
        "@uppy/dashboard": "^5.0.1",
        "@uppy/golden-retriever": "^5.0.0",
        "@uppy/xhr-upload": "^5.0.0",
        "assemblyai": "^4.16.0",
        "cheerio": "^1.1.2",
        "flexsearch": "^0.8.212",
        "minisearch": "^7.1.2",
        "node-record-lpcm16": "^1.0.1",
        "peerjs": "^1.5.5",
        "playwright": "^1.55.0"
    }
}
